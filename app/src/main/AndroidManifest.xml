<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.help4u">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".UserProfile"
            android:theme="@style/AppTheme"
            android:label="@string/user_profile"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.MainActivity" />
        </activity>

        <activity
            android:name=".AboutUs"
            android:label="About Us"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.MainActivity" />
        </activity>
        <activity
            android:name=".JobDetails"
            android:label="Job Details"
            android:parentActivityName=".JobList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.JobList" />
        </activity>
        <activity
            android:name=".CareerTestResult"
            android:label="Career Test Result"
            android:parentActivityName=".CareerTest">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.CareerTest" />
        </activity>
        <activity
            android:name=".CareerQuestionnaire"
            android:label="Career Test Question"
            android:parentActivityName=".CareerTest">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.CareerTest" />
        </activity>
        <activity
            android:name=".Qualification"
            android:label="Qualification"
            android:parentActivityName=".CareerTest">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.CareerTest" />
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".TitleScreenActivity" />
        <activity android:name=".Register" />
        <activity
            android:name=".JobList"
            android:label="Job List"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.MainActivity" />
        </activity>
        <activity
            android:name=".CareerTest"
            android:label="Career Test"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.help4u.CareerTest" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- change to AppTheme.Splash for the splash screen to works -->
            <!-- temporary comment out for designing purpose -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>